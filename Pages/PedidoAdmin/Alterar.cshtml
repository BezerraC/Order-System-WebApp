@page "{id:int?}"
@model ArkdBarV1.Pages.PedidoAdmin.AlterarModel
@{ ViewData["titulo"] = "Alteração de Pedido"; }

<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["titulo"] (@Model.Pedido.IdPedido.ToString("D6"))</h1>
            <hr />
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Pedido.IdPedido" />

                <div class="form-group">
                    <label asp-for="Pedido.Situacao" class="control-label"></label>
                    <select asp-for="Pedido.Situacao" asp-items="Html.GetEnumSelectList<ArkdBarV1.Models.Pedido.SituacaoPedido>()" class="form-control col-6">
                        <option selected="selected" value="">Selecione uma opção</option>
                    </select>
                    <span asp-validation-for="Pedido.Situacao" class="text-danger"></span>
                </div>

               

                <div class="form-group text-left">
                    <a asp-page="./Listar" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CustomConfirm");}
    <script>$(document).ready(function () {
            $(".custom-file-input").change(function () {
                var arquivo = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(arquivo);
            });
        });</script>
}

