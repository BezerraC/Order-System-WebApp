@model ArkdBarV1.Pages.NovoClienteModel

@{ ViewData["titulo"] = "Novo Cliente"; }

<div class="row justify-content-md-center">
    <div class="col-sm-12">
        <h1>Informe seus dados</h1>
        <hr />
        <form method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <fieldset>
                        <legend>Dados Pessoais</legend>
                        <div class="form-group">
                            <label asp-for="Cliente.Nome" class="control-label">Nome Completo</label>
                            <input asp-for="Cliente.Nome" class="form-control col-6" />
                            <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.CPF" class="control-label"></label>
                            <span>(somente números)</span>
                            <input asp-for="Cliente.CPF" class="form-control col-6 col-lg-4" />
                            <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                            <input asp-for="Cliente.DataNascimento" class="form-control col-6 col-lg-4" />
                            <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Contatos</legend>
                        <div class="form-group">
                            <label asp-for="Cliente.Email" class="control-label"></label>
                            <input asp-for="Cliente.Email" autocomplete="off" class="form-control col-12 col-lg-8" />
                            <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.Telefone" class="control-label"></label>
                            <span>(com DDD, somente números)</span>
                            <input asp-for="Cliente.Telefone" class="form-control col-6 col-lg-4"
                                   placeholder="99 9999 9999" />
                            <span asp-validation-for="Cliente.Telefone" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Senha de Acesso</legend>
                        <div class="form-group">
                            <label asp-for="SenhasUsuario.Senha" class="control-label"></label>
                            <input asp-for="SenhasUsuario.Senha" autocomplete="off" class="form-control col-6 col-lg-5" />
                            <span asp-validation-for="SenhasUsuario.Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SenhasUsuario.ConfirmacaoSenha" class="control-label"></label>
                            <input asp-for="SenhasUsuario.ConfirmacaoSenha" autocomplete="off" class="form-control col-6 col-lg-5"
                                   placeholder="Redigite sua senha" />
                            <span asp-validation-for="SenhasUsuario.ConfirmacaoSenha" class="text-danger"></span>
                        </div>
                    </fieldset>
                </div>
            </div>
            <hr />
            <div class="form-group text-left">
                <a asp-page="/Index" class="btn btn-info">Cancelar</a>
                <input type="submit" value="Criar meu cadastro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ await Html.RenderPartialAsync("_CustomConfirm");}
}